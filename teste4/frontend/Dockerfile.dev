# Frontend Development Dockerfile
FROM node:18-alpine

# Set work directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy project files
COPY . .

# Set environment variables
ENV REACT_APP_API_URL=http://localhost:8000/api/v1
ENV WATCHPACK_POLLING=true
ENV PORT=3000

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "start"]