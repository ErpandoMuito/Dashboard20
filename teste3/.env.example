# Configurações do Dashboard v2.0 - Teste 3
# Copie este arquivo para .env e configure as variáveis

# API do Tiny ERP (OBRIGATÓRIO)
TINY_API_TOKEN=seu_token_aqui

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Backend
LOG_LEVEL=INFO
ENV=development
TINY_API_TIMEOUT=30
TINY_API_MAX_RETRIES=3

# Frontend (criar .env no diretório frontend/)
REACT_APP_API_URL=http://localhost:8000
NODE_ENV=development

# Limites de recursos
MAX_UPLOAD_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30

# Monitoramento
ENABLE_METRICS=true
METRICS_PORT=8000